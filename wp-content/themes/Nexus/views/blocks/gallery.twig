<div class="gallery-block block {{block.classes}}">
  <div class="wrapper">
    <div class="gallery-block__content">
      <div class="gallery-block__title">
        <h2 class="gallery-block__title-h2">{{fields.title}} <span class="gallery-block__colour-title">{{fields.colour_title}}</span></h2>
        <p class="gallery-block__description">{{fields.description}}</p>
      </div>
      
      <div class="gallery-block__content-images">
        <div class="gallery-block__image">
          {% for image in fields.images %}
            <div class="gallery-block__image-item">
              <img src="{{image.url}}" alt="{{image.alt}}" />
              
                <div class="gallery-block__image-item-overlay">
                  <h3 class="gallery-block__image-item-title">{{fields.image_title}}</h3>
                  <p class="gallery-block__image-item-description">{{fields.image_description}}</p>
                </div>
            </div>

          {% endfor %}
          <div class="gallery-block__image-item">
                <h3 class="gallery-block__image-item-title">More Coming Soon</h3>
                <p>Discover new collections and featured works</p>
                <a href="/" class="btn btn--primary">View All</a>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
