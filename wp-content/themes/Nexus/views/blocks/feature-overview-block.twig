<div class="feature-overview-block block {{block.classes}}">
  <div class="wrapper">
    <div class="feature-overview-block__content">
        <div class="feature-overview-block__content-left">
        <div class="feature-overview-block__pill pill">
            <span class="feature-overview-block__pill-text pill__text">{{fields.pill_text}}</span>
        </div>
      <h2 class="feature-overview-block__title">{{fields.title}} <span class="feature-overview-block__colour-title">{{fields.colour_title}}</span></h2>
      <p class="feature-overview-block__description">{{fields.description}}</p>
      <ul class="feature-overview-block__list">
        {% for item in fields.list %}
          <li class="feature-overview-block__list-item"><span class="">{{item.title}}</span>{{item.text}}</li>
        {% endfor %}
      </ul>
      <a href="{{fields.button_url}}" class="btn btn--primary">{{fields.button_text}}</a>
    </div>
    <div class="feature-overview-block__content-right">
      <div class="feature-overview-block__image">   
        {% if fields.image %}
          <img src="{{fields.image.url}}" alt="{{fields.image.alt}}" />
        {% endif %}
      </div>
      </div>
    </div>
  </div>
</div>