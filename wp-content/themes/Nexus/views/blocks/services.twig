<div class="services-block block {{block.classes}}">
  <div class="wrapper">
    <div class="services-block__content">
      <div class="services-block__title">
        <h2 class="services-block__title-h2">{{fields.title}} <span class="services-block__colour-title">{{fields.colour_title}}</span></h2>
        <p class="services-block__description">{{fields.description}}</p>
      </div>
      <div class="services-block__cards">
        {% for item in fields.services %}
          <div class="services-block__card{% if loop.index == 2 %} services-block__card--popular{% endif %}">
            {% if loop.index == 2 %}
              <div class="services-block__badge">Most Popular</div>
            {% endif %}
            <h3 class="services-block__card-title">{{item.post_title}}</h3>
            <p class="services-block__card-description">{{item.field_service_description}}</p>
            <div class="services-block__card-price">
              {{item.service_price}}
           
            </div>
            <ul class="services-block__card-features">
              {% for feature in item.field_service_features %}
                <li class="services-block__card-feature">{{feature.service_feature}}</li>
              {% endfor %}
            </ul>
            <a href="{{site.url}}{{fields.button_url}}" class="btn btn--primary{% if loop.index == 3 or loop.index == 1 %} btn--secondary{% endif %}">
              {{fields.button_text}}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>