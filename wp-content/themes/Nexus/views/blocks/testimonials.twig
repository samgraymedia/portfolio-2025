<div id="testimonials-{{block.id}}" class="testimonials block {{block.classes}}">
  <div class="wrapper">
    <div class="testimonials__inner">
      <div class="testimonials__title">
        <h2><span class="testimonials__title-colour">{{ fields.title }}</span></h2>
        <p>{{ fields.description }}</p>
      </div>
      <div class="testimonials__items">
        {% for item in fields.testimonials %}
        <div class="testimonials__item">
          <div class="testimonials__item-rating">
            {% set max_stars = 5 %}
            {% for i in 1..max_stars %}
              {% if i <= item.testimonial_rating %}
                <span class="star star--filled">&#9733;</span>
              {% else %}
                <span class="star star--empty">&#9734;</span>
              {% endif %}
            {% endfor %}
          </div>
          <p>"{{ item.testimonial_text }}"</p>
          <div class="testimonials__item-details">
            <p>{{ item.post_title }}</p>
            <p>{{ item.testimonial_job_title }}</p>
            <p>{{ item.testimonial_company }}</p>
          </div>
        
        </div>
        {% endfor %}
      </div>
      <div class="testimonials__cta">
        <a class="btn btn--primary" href="{{ fields.cta_link }}">{{ fields.cta_text }}</a>
      </div>
    </div>
  </div>
</div>
