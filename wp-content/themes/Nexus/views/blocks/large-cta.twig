<div class="large-cta block {{ block.classes }}">
  <div class="wrapper">
    <div class="large-cta__inner">
      <h2 class="large-cta__title">{{ fields.title }} <span class="large-cta__title-colour">{{ fields.colour_title }}</span></h2>
      <p class="large-cta__description">{{ fields.description }}</p>
      <div class="large-cta__buttons">
        {% for button in fields.buttons %}
          <a href="{{ button.button_url }}" class="btn btn--{{button.button_style}}">{{ button.button_text }}</a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>