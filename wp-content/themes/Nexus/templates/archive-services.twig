{% extends "base.twig" %}

{% block content %}
    {% if page.content %}
        {{ page.content }}
    {% endif %}

    <div class="services-archive">
        
        <div class="services-archive__header block">
        <div class="wrapper">
            <h1 class="services-archive__title">Our Services</h1> 
            <p class="services-archive__desc">We offer a range of services to help you achieve your goals.</p>
        </div>
        </div>
        <div class="wrapper">
        <div class="block">
      
        <div class="services-archive__grid">
        {% for service in services %}
            <div class="service-block">
                <div class="service-block__left">
                    <h2 class="service-block__title">{{ service.title }}</h2>
                    <p class="service-block__desc">{{ service.meta('snippet') }}</p>
                    <p class="service-block__price">Starting at Â£{{ service.meta('price') }}</p>
                </div>
                <div class="service-block__right">
                    <ul class="service-block__features">
                        {% for item in service.meta('included') %}
                            <li>{{ item.item }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endfor %}
        </div>
        </div>
       
        </div>
    </div>
{% endblock %}