Title: Featured Work
Description: A showcase section for displaying featured portfolio work with customizable content and layout
Category: portfolio
Icon: <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="#fff" stroke="#000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="feather feather-briefcase"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path></svg>
Keywords: Featured Work, Portfolio Showcase, Work Display, Project Gallery
Mode: auto
Align: full
PostTypes: page post
SupportsAlign: full
SupportsMode: true
SupportsMultiple: true
#}

<div id="featured-work-{{block.id}}" class="featured-work block {{block.classes}}">
    <div class="wrapper">
        {% if fields.title %}
            <h2 class="featured-work-title">{{fields.title}}</h2>
        {% endif %}
        
        {% if fields.lead %}
            <p class="featured-work-description">{{fields.lead}}</p>
        {% endif %}
        
        <div class="featured-work-grid">
            {% for work_post in fields.work %}
                {% set work = TimberPost(work_post.ID) %}
                <div class="featured-work-item" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                    <div class="featured-work-item-image">
                        {% if work.thumbnail %}
                            <img src="{{ work.thumbnail.src }}" 
                                 alt="{{ work.title }}"
                                 loading="lazy"
                                 width="{{ work.thumbnail.width }}"
                                 height="{{ work.thumbnail.height }}">
                        {% endif %}
                    </div>
                    <div class="featured-work-item-content">
                        {% if work.meta('client') %}
                            <span class="featured-work-item-client">{{ work.meta('client') }}</span>
                        {% endif %}
                        <h3 class="featured-work-item-title">{{ work.title }}</h3>
                        <div class="featured-work-item-excerpt">{{ work.meta('snippet') }}</div>
                        <a href="{{ work.link }}" class="btn btn-primary">
                            View Project
                        </a>
                    </div>
                </div>
            {% endfor %}
            <div class="featured-work-item-link">
                <a href="{{ site.link }}/portfolio" class="btn btn-secondary">
                    View All Projects
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="arrow-icon"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
                </a>
            </div>
        </div>
    </div>
</div>