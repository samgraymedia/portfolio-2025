<div id="faq-{{block.id}}" class="faq block {{block.classes}}">
    <div class="wrapper">
        <h2 class="faq-title">{{ fields.title }}</h2>
        <div class="faq-items">
            {% for item in fields.faq %}
                <div class="faq-item">
                    <h3 class="faq-item-title">{{ item.question }}</h3>
                    <div class="faq-item-content">{{ item.answer }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>