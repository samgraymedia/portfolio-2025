<div class="steps block {{ block.classes }}">
    <div class="wrapper">
<h2>{{fields.title|default('Content Grid')}}</h2>
      <p>{{fields.lead|default('Content coming soon')}}</p>
    {% if fields.steps %}
        <div class="steps__grid">
            {% for step in fields.steps %}
                <div class="step">
                    {% if step.title or step.description %}
                        <div class="step__content">
                            <div class="step__number">{{ loop.index }}</div>
                            {% if step.title %}
                                <h3 class="step__title">{{ step.title }}</h3>
                            {% endif %}
                            
                            {% if step.description %}
                                <div class="step__lead">{{ step.description }}</div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
    </div>
</div>