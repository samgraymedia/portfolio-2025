{% extends "base.twig" %}

{% block content %}
    {% if page.content %}
        {{ page.content }}
    {% endif %}

    <div class="portfolio-archive wrapper">
        {# Freelance Section #}
        {% if freelance_items|length > 0 %}
            <section class="portfolio-section">
                <div class="portfolio-section-top">
                    <h2 class="portfolio-section-title">Freelance Work</h2>
                    <p class="large">Independent projects showcasing creative freedom and innovative solutions for forward-thinking clients.</p>
                </div>
                <div class="portfolio-grid">
                    {% for post in freelance_items %}
                        <article class="portfolio-item-row">
                            <a href="{{ post.link }}" class="portfolio-item-link">
                                <div class="portfolio-thumbnail-col">
                                    {% if post.thumbnail %}
                                        <div class="portfolio-thumbnail">
                                            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="portfolio-content-col">
                                    <div>
                                        <div class="portfolio-category">{{ loop.index == 1 ? 'E-COMMERCE' : 'BRANDING' }}</div>
                                        <h2 class="portfolio-item-title-large">{{ post.title }}</h2>
                                        <div class="portfolio-item-description">
                                            {{ post.meta('snippet') }}
                                        </div>
                                    </div>

                                    {% if post.terms('technology') %}
                                    <div>
                                        <div class="portfolio-section-heading">TECHNOLOGIES</div>
                                        <div class="badge-list">
                                            {% for tech in post.terms('technology') %}
                                                <span class="badge">{{ tech.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    {% endif %}

                                    {% if post.terms('recognition') %}
                                    <div>
                                        <div class="portfolio-section-heading">RECOGNITION</div>
                                        <div class="badge-list badge-list-vertical">
                                            {% for award in post.terms('recognition') %}
                                                <span class="badge badge-plain">{{ award.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                </div>
            </section>
        {% endif %}

        {# Employment Section #}
        {% if employment_items|length > 0 %}
            <section class="portfolio-section">
                <div class="portfolio-section-top">
                    <h2 class="portfolio-section-title">Employment Work</h2>
                    <p class="large">Professional work delivered as part of creative teams at leading agencies and corporations.</p>
                </div>
                <div class="portfolio-grid">
                    {% for post in employment_items %}
                        <article class="portfolio-item-row">
                            <a href="{{ post.link }}" class="portfolio-item-link">
                                <div class="portfolio-thumbnail-col">
                                    {% if post.thumbnail %}
                                        <div class="portfolio-thumbnail">
                                            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="portfolio-content-col">
                                    <div>
                                        <div class="portfolio-category">{{ loop.index == 1 ? 'E-COMMERCE' : 'BRANDING' }}</div>
                                        <h2 class="portfolio-item-title-large">{{ post.title }}</h2>
                                        <div class="portfolio-item-description">
                                            {{ post.meta('snippet') }}
                                        </div>
                                    </div>

                                    {% if post.terms('technology') %}
                                    <div>
                                        <div class="portfolio-section-heading">TECHNOLOGIES</div>
                                        <div class="badge-list">
                                            {% for tech in post.terms('technology') %}
                                                <span class="badge">{{ tech.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    {% endif %}

                                    {% if post.terms('recognition') %}
                                    <div>
                                        <div class="portfolio-section-heading">RECOGNITION</div>
                                        <div class="badge-list badge-list-vertical">
                                            {% for award in post.terms('recognition') %}
                                                <span class="badge badge-plain">{{ award.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    {% endif %}
                                </div>
                            </a>
                        </article>
                    {% endfor %}
                </div>
            </section>
        {% endif %}
    </div>
{% endblock %} 