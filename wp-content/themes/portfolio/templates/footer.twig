<footer class="site-footer">
  <div class="footer-content wrapper">
    <div class="footer-brand">
      <h2 class="footer-title"><a href="{{site.url}}">{{site.name}}</a></h2>
      <p class="footer-tagline">{{site.description}}</p>
    </div>
    
    <nav class="footer-nav">
      <div class="nav-section">
        <h3>Navigation</h3>
        {% if footer_menu %}
          <ul>
            {% for item in footer_menu.items %}
              <li><a class="animated-link" href="{{item.link}}">{{item.title}}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      
      <div class="nav-section">
        <h3>Connect</h3>
          <ul class="contact-info-list">
                    <li><strong>Email</strong><br /><a class="animated-link" href="mailto:{{ options.contact_email }}">{{ options.contact_email }}</a></li>
                    <li><strong>Phone</strong><br /><a class="animated-link" href="tel:{{ options.contact_phone }}">{{ options.contact_phone }}</a></li>
                    <li><strong>Location</strong><br />{{ options.contact_location }}<br />{{ options.contact_availability }}</li>
                </ul>
        <ul class="social-links">
          {% if options.linkedin_url %}
            <li><a href="{{options.linkedin_url}}" aria-label="LinkedIn">LinkedIn</a></li>
          {% endif %}
          {% if options.github_url %}
            <li><a href="{{options.github_url}}" aria-label="GitHub">GitHub</a></li>
          {% endif %}
          {% if options.twitter_url %}
            <li><a href="{{options.twitter_url}}" aria-label="Twitter">Twitter</a></li>
          {% endif %}
        </ul>
      </div>
    </nav>
  </div>
  
  <div class="footer-bottom">
    <p class="copyright">Â© {{"now"|date('Y')}} {{site.name}}. All rights reserved.</p>
  </div>
</footer>